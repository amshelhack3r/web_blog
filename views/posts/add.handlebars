{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{/each}}
<div class="card card-body">
    <h3>ADD A POST</h3>
    <form action="/post/insert_post" method="POST">
        <div class="form-group">
            <label for="formGroupExampleInput">Post Title</label>
            <input type="text" class="form-control" name="title" placeholder="Enter title" value="{{title}}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Write Post</label>
            <textarea class="form-control" name="details" rows="3">{{details}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">SUBMIT</button>
    </form>
</div>